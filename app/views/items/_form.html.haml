= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :quantidade_item
    = f.number_field :quantidade_item
  .actions
    = f.submit 'Save'
